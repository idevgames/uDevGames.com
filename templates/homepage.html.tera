{% extends "layout" %}
{% block content %}
<div class="row">
  <div class="col">
    <p>
      {% if auth.user is object %}
        Hello, {{ auth.user.login }}. You can <a href="/logout">logout</a> now.
      {% else %}
        Hello unknown user, would you like to <a href="/login_with_github">login</a>?
      {% endif %}
    </p>
  </div>
</div>
{% endblock %}
